---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Button from "../../../components/ui/Button.astro";
import { site } from "../../../data/site";

const hasYouTube = site.portals.youtubeChannelUrl && site.portals.youtubeChannelUrl !== "TBD";
---

<BaseLayout title="Videos" description={`Recent videos from ${site.name}.`}>
  <div class="stack">
    <h1 style="margin: 0;">Videos</h1>

    <section class="card">
      <h2 style="margin-top: 0;">Watch on YouTube</h2>
      <p class="muted">
        Browse recent messages and live streams on our YouTube channel.
      </p>

      {hasYouTube ? (
        <div style="margin-top: var(--space-4);">
          <Button href={site.portals.youtubeChannelUrl} external variant="secondary">
            Browse on YouTube
          </Button>
        </div>
      ) : (
        <p class="small muted" style="margin-top: var(--space-4);">
          Add the YouTube channel link in <code>src/data/site.ts</code>.
        </p>
      )}
    </section>
  </div>
</BaseLayout>
