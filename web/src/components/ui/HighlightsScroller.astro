---
import weeklyHighlights from "../../data/weekly-highlights";

const highlights = weeklyHighlights.filter((item) => item.text.trim().length > 0);
const isExternal = (href?: string) => typeof href === "string" && /^https?:\/\//.test(href);
---

{highlights.length > 0 ? (
  <section class="highlights-carousel" aria-label="Weekly highlights carousel">
    <div class="highlights-carousel__viewport">
      <div class="highlights-carousel__track" role="list">
        {highlights.map((item) => (
          <article class="highlights-carousel__slide" role="listitem">
            <div class="highlights-carousel__card">
              <div class="highlights-carousel__badge-row">
                {item.badge ? <span class="highlights-carousel__badge">{item.badge}</span> : null}
                {item.tag ? <span class="highlights-carousel__tag">{item.tag}</span> : null}
              </div>
              <p class="highlights-carousel__text">
                {item.href ? (
                  <a
                    href={item.href}
                    target={isExternal(item.href) ? "_blank" : undefined}
                    rel={isExternal(item.href) ? "noreferrer" : undefined}
                  >
                    {item.text}
                  </a>
                ) : (
                  item.text
                )}
              </p>
              {item.ctaHref && item.ctaLabel ? (
                <a
                  class="highlights-carousel__cta"
                  href={item.ctaHref}
                  target={item.external ? "_blank" : undefined}
                  rel={item.external ? "noreferrer" : undefined}
                >
                  {item.ctaLabel}
                </a>
              ) : null}
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
) : null}

<script src="/scripts/highlights-carousel.js" defer></script>

<style>
  .highlights-carousel {
    margin: var(--space-8) 0;
    border-radius: var(--radius-3);
    background: var(--color-surface);
    box-shadow: var(--shadow-1);
    border: 1px solid var(--color-border);
    position: relative;
    overflow: hidden;
  }

  .highlights-carousel__viewport {
    overflow: hidden;
  }

  .highlights-carousel__track {
    display: flex;
    transition: transform 0.6s ease-in-out;
    will-change: transform;
  }

  .highlights-carousel__slide {
    flex: 0 0 100%;
    padding: var(--space-6) var(--space-4);
  }

  .highlights-carousel__card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .highlights-carousel__badge-row {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .highlights-carousel__badge,
  .highlights-carousel__tag {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.3rem 0.75rem;
    border-radius: var(--radius-2);
  }

  .highlights-carousel__badge {
    background: var(--color-gray-100);
    color: var(--color-text-muted);
  }

  .highlights-carousel__tag {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .highlights-carousel__text {
    margin: 0;
    font-weight: 600;
    font-size: 1.1rem;
    line-height: 1.3;
  }

  .highlights-carousel__text a {
    color: inherit;
    text-decoration: none;
  }

  .highlights-carousel__text a:hover {
    text-decoration: underline;
  }

  .highlights-carousel__cta {
    align-self: flex-start;
    font-weight: 600;
    color: var(--color-primary);
    text-decoration: none;
  }

  .highlights-carousel__cta:hover {
    text-decoration: underline;
  }

  @media (prefers-reduced-motion: reduce) {
    .highlights-carousel__track {
      transition: none;
    }
  }

  @media (max-width: 720px) {
    .highlights-carousel__slide {
      padding: var(--space-5);
    }
  }
</style>
