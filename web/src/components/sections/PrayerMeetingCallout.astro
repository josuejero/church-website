---
import Button from "../ui/Button.astro";
import type { PrayerMeetingDetails } from "../../data/activities";

type Props = {
  meeting: PrayerMeetingDetails;
};

const { meeting } = Astro.props as Props;
const timeLabel = `${meeting.day} · ${meeting.time}`;
---

<section class="prayer-callout" aria-label="Prayer meeting callout">
  <div class="prayer-callout__content">
    <p class="prayer-callout__eyebrow">{meeting.title}</p>
    <h2 class="prayer-callout__time">{timeLabel}</h2>
    <p class="prayer-callout__location">
      In person at <strong>{meeting.location}</strong>
    </p>
  </div>

  <div class="prayer-callout__cta">
    <Button href={meeting.zoomUrl} external size="md"> Join via Zoom </Button>
  </div>

  <details class="prayer-callout__details">
    <summary>Dial-in &amp; meeting info</summary>
    <dl>
      <div>
        <dt>Dial-in</dt>
        <dd>{meeting.dialIn}</dd>
      </div>
      <div>
        <dt>Meeting ID</dt>
        <dd>{meeting.meetingId}</dd>
      </div>
      <div>
        <dt>Passcode</dt>
        <dd>{meeting.passcode}</dd>
      </div>
    </dl>
  </details>
</section>

<style>
  .prayer-callout {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-4);
    background:
      radial-gradient(
        120% 130% at 100% 0%,
        color-mix(in oklab, var(--color-primary) 16%, transparent) 0%,
        transparent 65%
      ),
      var(--color-surface);
    padding: clamp(var(--space-4), 2.2vw, var(--space-6));
    box-shadow: var(--shadow-2);
    display: grid;
    gap: var(--space-4);
  }

  .prayer-callout__eyebrow {
    margin: 0 0 var(--space-1);
    font-size: 0.8rem;
    font-weight: 800;
    letter-spacing: 0.13em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  .prayer-callout__time {
    margin: 0;
    font-size: clamp(1.35rem, 1.05rem + 1.1vw, 1.95rem);
    letter-spacing: -0.02em;
  }

  .prayer-callout__location {
    margin: var(--space-2) 0 0;
    color: var(--color-text-muted);
  }

  .prayer-callout__location strong {
    color: var(--color-text);
  }

  .prayer-callout__cta {
    display: flex;
  }

  .prayer-callout__cta .btn {
    width: 100%;
    justify-content: center;
  }

  .prayer-callout__details {
    border-top: 1px solid
      color-mix(in oklab, var(--color-border) 72%, var(--color-primary) 28%);
    padding-top: var(--space-3);
  }

  .prayer-callout__details summary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 700;
    cursor: pointer;
    list-style: none;
    color: var(--color-primary-link);
  }

  .prayer-callout__details summary::-webkit-details-marker {
    display: none;
  }

  .prayer-callout__details summary::after {
    content: "▾";
    font-size: 0.75rem;
    transition: transform 180ms ease;
  }

  .prayer-callout__details[open] summary::after {
    transform: rotate(180deg);
  }

  .prayer-callout__details dl {
    margin: var(--space-3) 0 0;
    display: grid;
    gap: var(--space-2);
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }

  .prayer-callout__details dl > div {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2);
    background: color-mix(
      in oklab,
      var(--color-surface) 95%,
      var(--color-surface-muted) 5%
    );
    padding: var(--space-3);
  }

  .prayer-callout__details dt {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-muted);
  }

  .prayer-callout__details dd {
    margin: var(--space-1) 0 0;
    font-size: var(--font-size-1);
    font-weight: 700;
  }

  @media (min-width: 720px) {
    .prayer-callout {
      grid-template-columns: 1fr auto;
      align-items: center;
    }

    .prayer-callout__details {
      grid-column: 1 / -1;
    }

    .prayer-callout__cta {
      justify-content: flex-end;
    }
  }
</style>
